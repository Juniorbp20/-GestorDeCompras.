<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dashboard_background"
    tools:context=".activities.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@android:color/transparent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:title="@string/app_name"
            android:titleTextColor="@color/dashboard_icon_tint"
            app:titleCentered="true" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:paddingBottom="24dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_dashboard_header"
                android:padding="20dp"
                android:clipToOutline="true">

                <TextView
                    android:id="@+id/tvGreeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dashboard_greeting_placeholder"
                    android:textColor="@color/dashboard_header_text"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="Buenas tardes!" />

                <TextView
                    android:id="@+id/tvDashboardSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/dashboard_subtitle"
                    android:textColor="@color/dashboard_header_text"
                    android:textSize="14sp"
                    tools:text="Resumen del dia" />

                <TextView
                    android:id="@+id/tvTotalPendiente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="RD$ 0.00"
                    android:textColor="@color/dashboard_header_text"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    tools:text="RD$ 0.00" />

                <TextView
                    android:id="@+id/tvTotalLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/total_pendiente"
                    android:textColor="@color/dashboard_header_text"
                    android:textSize="14sp"
                    tools:text="Total pendiente" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTrend"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/dashboard_trend_placeholder"
                    android:textColor="@color/dashboard_chip_text"
                    app:chipBackgroundColor="@color/dashboard_card_orders"
                    app:chipCornerRadius="12dp"
                    app:chipIcon="@drawable/ic_trending_up"
                    app:chipIconTint="@color/dashboard_chip_icon"
                    app:iconStartPadding="8dp"
                    app:rippleColor="@android:color/transparent"
                    tools:text="Sin cambios desde tu ultima visita" />
            </LinearLayout>

            <!-- Metric cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/dashboard_card_primary"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_round_muted"
                                android:contentDescription="@string/total_pendiente"
                                android:padding="8dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_profit"
                                tools:ignore="UseAppTint" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/ganancia_esperada"
                                    android:textColor="@color/dashboard_text_muted"
                                    android:textSize="13sp"
                                    tools:text="Ganancia esperada" />

                                <TextView
                                    android:id="@+id/tvGananciaEsperada"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="RD$ 0.00"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    tools:text="RD$ 0.00" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/dashboard_card_primary"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_round_muted"
                                android:contentDescription="@string/pedidos_hoy"
                                android:padding="8dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_orders"
                                tools:ignore="UseAppTint" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/pedidos_hoy"
                                    android:textColor="@color/dashboard_text_muted"
                                    android:textSize="13sp"
                                    tools:text="Pedidos hoy" />

                                <TextView
                                    android:id="@+id/tvPedidosHoy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    tools:text="2" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/dashboard_card_primary"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_round_muted"
                                android:contentDescription="@string/clientes_activos"
                                android:padding="8dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_people"
                                android:tint="@color/dashboard_icon_tint"
                                tools:ignore="UseAppTint" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/clientes_activos"
                                    android:textColor="@color/dashboard_text_muted"
                                    android:textSize="13sp"
                                    tools:text="Clientes activos" />

                                <TextView
                                    android:id="@+id/tvClientesActivos"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    tools:text="2" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/dashboard_card_primary"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_round_muted"
                                android:contentDescription="@string/dashboard_pending_collections"
                                android:padding="8dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_alert"
                                tools:ignore="UseAppTint" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvSecondaryMetricLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/dashboard_pending_collections"
                                    android:textColor="@color/dashboard_text_muted"
                                    android:textSize="13sp"
                                    tools:text="Pedidos atrasados" />

                                <TextView
                                    android:id="@+id/tvSecondaryMetricValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    tools:text="0" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>

            <!-- Quick actions -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/acciones_rapidas"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Acciones rapidas" />

            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipNuevoPedido"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nuevo_pedido"
                    app:chipBackgroundColor="@color/dashboard_card_primary"
                    app:chipIcon="@drawable/ic_add_circle"
                    app:chipIconTint="@color/dashboard_icon_tint"
                    app:iconStartPadding="8dp"
                    tools:text="Nuevo pedido" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipListaPedidos"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ver_pedidos"
                    app:chipBackgroundColor="@color/dashboard_card_primary"
                    app:chipIcon="@drawable/ic_list"
                    app:chipIconTint="@color/dashboard_icon_tint"
                    app:iconStartPadding="8dp"
                    tools:text="Ver pedidos" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCalendario"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/calendario"
                    app:chipBackgroundColor="@color/dashboard_card_primary"
                    app:chipIcon="@drawable/ic_calendar"
                    app:chipIconTint="@color/dashboard_icon_tint"
                    app:iconStartPadding="8dp"
                    tools:text="Calendario" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipClientes"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/clientes"
                    app:chipBackgroundColor="@color/dashboard_card_primary"
                    app:chipIcon="@drawable/ic_people"
                    app:chipIconTint="@color/dashboard_icon_tint"
                    app:iconStartPadding="8dp"
                    tools:text="Clientes" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipReportes"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dashboard_reports"
                    app:chipBackgroundColor="@color/dashboard_card_primary"
                    app:chipIcon="@drawable/ic_reports"
                    app:chipIconTint="@color/dashboard_icon_tint"
                    app:iconStartPadding="8dp"
                    tools:text="Reportes" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTarjetas"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accion_agregar_tarjeta"
                    app:chipBackgroundColor="@color/dashboard_card_primary"
                    app:chipIcon="@drawable/ic_credit_card"
                    app:chipIconTint="@color/dashboard_icon_tint"
                    app:iconStartPadding="8dp"
                    tools:text="Tarjetas" />
            </com.google.android.material.chip.ChipGroup>

            <!-- Next orders -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/proximos_pedidos"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Proximos pedidos" />

            <TextView
                android:id="@+id/tvNextOrdersSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/dashboard_next_orders_subtitle"
                android:textColor="@color/dashboard_text_muted"
                android:textSize="14sp"
                tools:text="Organiza tus entregas para los proximos dias." />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProximosPedidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                tools:listitem="@layout/item_pedido" />

            <LinearLayout
                android:id="@+id/emptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_orders"
                    android:tint="@color/dashboard_icon_tint"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:id="@+id/tvNoPedidos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/no_hay_pedidos_proximos"
                    android:textColor="@color/dashboard_text_muted"
                    android:textSize="15sp"
                    tools:text="No hay pedidos proximos" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
