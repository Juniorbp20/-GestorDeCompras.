<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent" android:padding="16dp">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
        <Spinner android:id="@+id/spinnerClientes" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <Spinner android:id="@+id/spinnerTiendas" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
        <EditText android:id="@+id/etMontoCompra" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="Monto de compra (RD$)" android:inputType="numberDecimal" android:layout_marginTop="12dp"
            tools:ignore="HardcodedText" />
        <RadioGroup android:id="@+id/rgTipoGanancia" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="8dp">
            <RadioButton android:id="@+id/rbMontoFijo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ganancia fija" android:checked="true"
                tools:ignore="HardcodedText" />
            <RadioButton android:id="@+id/rbPorcentaje" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="%" android:layout_marginStart="16dp"
                tools:ignore="HardcodedText" />
        </RadioGroup>
        <EditText android:id="@+id/etGanancia" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Ganancia (monto o %)" android:inputType="numberDecimal"
            tools:ignore="Autofill,HardcodedText" />
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginTop="8dp">
            <TextView android:id="@+id/tvFechaEntrega" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="dd/MM/yyyy"
                tools:ignore="HardcodedText" />
            <Button android:id="@+id/btnSeleccionarFecha" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Elegir fecha"
                tools:ignore="HardcodedText" />
        </LinearLayout>
        <EditText android:id="@+id/etNotas" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Notas (opcional)" android:inputType="textMultiLine" android:minLines="3" android:layout_marginTop="8dp"
            tools:ignore="Autofill,HardcodedText" />
        <TextView android:id="@+id/tvTotalGeneral" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="RD$ 0.00" android:textSize="18sp" android:textStyle="bold" android:layout_marginTop="12dp"
            tools:ignore="HardcodedText" />
        <Button android:id="@+id/btnGuardar" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Guardar" android:layout_marginTop="16dp"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</ScrollView>